	public static void ej4() {
		
		Scanner num = new Scanner(System.in);
		System.out.println("Introduce un número");
		int numero = num.nextInt();
		num.close();
		
		if(numero%2 == 0) {
			System.out.println("El número es par");
		}
		else {
			
			System.out.println("El número es impar");
